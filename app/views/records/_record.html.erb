<% if record.image.attached? %>
<div class="card">
  <%= link_to image_tag("プロトタイプの画像", class: :card__img ), root_path %>
<% end %>
  <div class="card__body">
    <%= link_to "#{record.name}様", record_path(record.id), class: :card__title%>
    <p class="card__summary">
      <%= record.manager %>
    </p>
    <%= record.day %>
  </div>
</div>